<Window x:Class="game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики-нолики" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="Button_0_0" Grid.Row="0" Grid.Column="0" FontSize="40" Click="Button_Click"/>
        <Button x:Name="Button_0_1" Grid.Row="0" Grid.Column="1" FontSize="40" Click="Button_Click"/>
        <Button x:Name="Button_0_2" Grid.Row="0" Grid.Column="2" FontSize="40" Click="Button_Click"/>
        
        <Button x:Name="Button_1_0" Grid.Row="1" Grid.Column="0" FontSize="40" Click="Button_Click"/>
        <Button x:Name="Button_1_1" Grid.Row="1" Grid.Column="1" FontSize="40" Click="Button_Click"/>
        <Button x:Name="Button_1_2" Grid.Row="1" Grid.Column="2" FontSize="40" Click="Button_Click"/>
        
        <Button x:Name="Button_2_0" Grid.Row="2" Grid.Column="0" FontSize="40" Click="Button_Click"/>
        <Button x:Name="Button_2_1" Grid.Row="2" Grid.Column="1" FontSize="40" Click="Button_Click"/>
        <Button x:Name="Button_2_2" Grid.Row="2" Grid.Column="2" FontSize="40" Click="Button_Click"/>
    </Grid>
</Window>
