<Window x:Class="game.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Введите имя:" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox Name="UsernameBox" Width="200" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Content="Войти" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,10,0,0"
                Click="LoginButton_Click"/>
    </Grid>
</Window>
