<Window x:Class="MemoryGame.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Username:" />
            <TextBox x:Name="UsernameTextBox" />
            <Label Content="Password:" />
            <PasswordBox x:Name="PasswordBox" />

            <Button Content="Login" Click="LoginButton_Click" Margin="0,10,0,0" />
            <Button Content="Register" Click="RegisterButton_Click" Margin="0,5,0,0" />
            <TextBlock x:Name="ErrorMessageTextBlock" Foreground="Red" Margin="0,5,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
