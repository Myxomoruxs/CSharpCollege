<Window x:Class="WordGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordGame"
        mc:Ignorable="d"
        Title="Word Game" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Button Content="СТАРТ" Command="{Binding StartGameCommand}" Width="100" Height="30"/>
            <TextBlock Text="{Binding TargetWord}" FontSize="24" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>
        <TextBlock Text="{Binding Score, StringFormat='Score: {0}'}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
        <TextBlock Text="{Binding TimeRemaining, StringFormat='Time: {0}'}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <ItemsControl ItemsSource="{Binding Cells}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="7"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Letter}" Width="40" Height="40" FontSize="18"
                            Command="{Binding DataContext.MakeMoveCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}" IsEnabled="{Binding DataContext.IsGameRunning, RelativeSource={RelativeSource AncestorType=Window}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{Binding BackgroundColor}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="Background" Value="Green"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <TextBlock Text="{Binding ErrorMessage}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Foreground="Red" FontSize="16"/>
    </Grid>
</Window>