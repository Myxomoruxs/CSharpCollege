<Window x:Class="Calculator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.Wpf" xmlns:viewmodel="clr-namespace:Calculator.Wpf.ViewModel"
        mc:Ignorable="d"
        Title="Калькулятор" Height="660" Width="900" MinHeight="400" MinWidth="400">
    <Window.DataContext>
        <viewmodel:CalculatorViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*" />
            <ColumnDefinition Width="125*" />
            <ColumnDefinition Width="125*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="125*" />
            <ColumnDefinition Width="161*" />
            <ColumnDefinition Width="214*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Background="Black" Margin="5,5,5,66" Grid.RowSpan="2">
            <TextBlock Text="{Binding DisplayOutput}" FontSize="36" Foreground="Yellow" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10" />
        </Border>

        <Grid Grid.Row="0" Grid.Column="6" Grid.RowSpan="6" Margin="0,0,0,5">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0" ItemsSource="{Binding OperationLog}" SelectedItem="" d:ItemsSource="{d:SampleData ItemCount=5}" />

            <Button Grid.Row="1" Content="Очистить" Margin="5" Padding="5" HorizontalAlignment="Center" Click="ClearOperationLog_Click" />
        </Grid>

        <Button Grid.Row="1" Grid.Column="0" Content="1/x" FontSize="36" Margin="5,70,5,129" Click="OnePartNumberButton_Click" Grid.RowSpan="2" />

        <Button Grid.Row="1" Grid.Column="1" Content="x^2" FontSize="36" Margin="5,70,5,129" Click="DegreeButton_Click" Grid.RowSpan="2" />

        <Button Grid.Row="1" Grid.Column="2" Content="2√x" FontSize="36" Margin="5,70,5,129" Click="SquareButton_Click" Grid.RowSpan="2" />

        <Button Grid.Row="1" Grid.Column="4" Content="ln" FontSize="36" Margin="5,70,5,129" Click="LogButton_Click" Grid.RowSpan="2" />

        <Button Grid.Row="2" Grid.Column="0" Content="7" FontSize="36" Margin="5,5,5,5" Click="DigitButton_Click" />

        <Button Grid.Row="2" Grid.Column="1" Content="8" FontSize="36" Margin="5,5,5,5" Click="DigitButton_Click" />

        <Button Grid.Row="2" Grid.Column="2" Content="9" FontSize="36" Margin="5,5,5,5" Click="DigitButton_Click" />

        <Button Grid.Row="3" Grid.Column="0" Content="4" FontSize="36" Margin="5,5,5,5" Click="DigitButton_Click" />

        <Button Grid.Row="3" Grid.Column="1" Content="5" FontSize="36" Margin="5,5,5,5" Click="DigitButton_Click" />

        <Button Grid.Row="3" Grid.Column="2" Content="6" FontSize="36" Margin="5,5,5,5" Click="DigitButton_Click" />

        <Button Grid.Row="4" Grid.Column="0" Content="1" FontSize="36" Margin="5,5,5,5" Click="DigitButton_Click" />

        <Button Grid.Row="4" Grid.Column="1" Content="2" FontSize="36" Margin="5,5,5,5" Click="DigitButton_Click" />

        <Button Grid.Row="4" Grid.Column="2" Content="3" FontSize="36" Margin="5,5,5,5" Click="DigitButton_Click" />

        <Button Grid.Row="5" Grid.Column="1" Content="0" FontSize="36" Margin="5,5,5,5" Click="DigitButton_Click" />

        <Button Grid.Row="2" Grid.Column="4" Content="C" FontSize="36" Margin="5,10,5,10" Click="ClearButton_Click" Grid.ColumnSpan="2" />

        <Button Grid.Row="2" Grid.Column="4" Content="+" FontSize="36" Margin="5,121,5,10" Click="OperationButton_Click" Grid.RowSpan="2" />

        <Button Grid.Row="2" Grid.Column="5" Content="-" FontSize="36" Margin="5,121,5,11" Click="OperationButton_Click" Grid.RowSpan="2" />

        <Button Grid.Row="4" Grid.Column="4" Content="*" FontSize="36" Margin="5,0,5,10" Click="OperationButton_Click" />

        <Button Grid.Row="3" Grid.Column="5" Content="/" FontSize="36" Margin="5,121,5,10" Click="OperationButton_Click" Grid.RowSpan="2" />

        <Button Grid.Row="5" Grid.Column="4" Content="=" FontSize="36" Margin="5,5,10,5" Click="OperationButton_Click" Grid.ColumnSpan="2" />


    </Grid>
</Window>
