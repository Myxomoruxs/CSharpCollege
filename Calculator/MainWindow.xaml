<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="500" Width="400">
    <Grid>
        <TextBox Name="Display" FontSize="36" Margin="10" Height="60"
                 Text="0" IsReadOnly="True" TextAlignment="Right" VerticalAlignment="Top"/>

        <UniformGrid Rows="6" Columns="4" Margin="10,80,10,10">
            <Button Content="%" Click="Operation_Click"/>
            <Button Content="√" Click="Sqrt_Click"/>
            <Button Content="x²" Click="Square_Click"/>
            <Button Content="1/x" Click="Inverse_Click"/>

            <Button Content="CE" Click="ClearEntry_Click"/>
            <Button Content="C" Click="Clear_Click"/>
            <Button Content="&lt;-" Click="Backspace_Click"/>
            <Button Content="/" Click="Operation_Click"/>

            <Button Content="7" Click="Digit_Click"/>
            <Button Content="8" Click="Digit_Click"/>
            <Button Content="9" Click="Digit_Click"/>
            <Button Content="X" Click="Operation_Click"/>

            <Button Content="4" Click="Digit_Click"/>
            <Button Content="5" Click="Digit_Click"/>
            <Button Content="6" Click="Digit_Click"/>
            <Button Content="-" Click="Operation_Click"/>

            <Button Content="1" Click="Digit_Click"/>
            <Button Content="2" Click="Digit_Click"/>
            <Button Content="3" Click="Digit_Click"/>
            <Button Content="+" Click="Operation_Click"/>

            <Button Content="," Click="Comma_Click"/>
            <Button Content="0" Click="Digit_Click"/>
            <Button Content="+/-" Click="Negate_Click"/>
            <Button Content="=" Click="Equal_Click"/>
        </UniformGrid>
    </Grid>
</Window>