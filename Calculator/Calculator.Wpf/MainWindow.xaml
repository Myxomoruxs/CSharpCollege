<Window x:Class="Calculator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Calculator.Wpf.ViewModels"
        Title="Form1" Height="550" Width="420">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Дисплей -->
        <TextBlock Grid.Row="0" Text="{Binding DisplayValue}" 
                   FontSize="72" VerticalAlignment="Center" 
                   HorizontalAlignment="Right" Padding="10" 
                   Background="White" Foreground="Black"/>

        <!-- Кнопки -->
        <UniformGrid Grid.Row="1" Rows="6" Columns="4">
            <!-- Первая строка -->
            <Button Content="%" Click="OperationButton_Click"/>
            <Button Content="√" Click="OperationButton_Click"/>
            <Button Content="x²" Click="OperationButton_Click"/>
            <Button Content="1/x" Click="OperationButton_Click"/>

            <!-- Вторая строка -->
            <Button Content="CE" Click="ClearButton_Click"/>
            <Button Content="C" Click="ClearButton_Click"/>
            <Button Content="&lt;-" Click="Backspace_Click"/>
            <Button Content="/" Click="OperationButton_Click"/>

            <!-- Третья строка -->
            <Button Content="7" Click="DigitButton_Click"/>
            <Button Content="8" Click="DigitButton_Click"/>
            <Button Content="9" Click="DigitButton_Click"/>
            <Button Content="X" Click="OperationButton_Click"/>

            <!-- Четвертая строка -->
            <Button Content="4" Click="DigitButton_Click"/>
            <Button Content="5" Click="DigitButton_Click"/>
            <Button Content="6" Click="DigitButton_Click"/>
            <Button Content="-" Click="OperationButton_Click"/>

            <!-- Пятая строка -->
            <Button Content="1" Click="DigitButton_Click"/>
            <Button Content="2" Click="DigitButton_Click"/>
            <Button Content="3" Click="DigitButton_Click"/>
            <Button Content="+" Click="OperationButton_Click"/>

            <!-- Шестая строка -->
           
            <Button Content="0" Click="DigitButton_Click"/>
            <Button Content="±" Click="SignButton_Click"/>
            <Button Content="=" Click="EqualButton_Click"/>
        </UniformGrid>
    </Grid>
</Window>