<Window x:Class="TicTacToe.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики-нолики" Height="350" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Крестики-нолики" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
        <Grid Grid.Row="1" Name="GameGrid" Margin="10">
            <!-- Генерация кнопок для игрового поля 3x3 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Name="Btn00" Grid.Row="0" Grid.Column="0" Click="Cell_Click"/>
            <Button Name="Btn01" Grid.Row="0" Grid.Column="1" Click="Cell_Click"/>
            <Button Name="Btn02" Grid.Row="0" Grid.Column="2" Click="Cell_Click"/>
            <Button Name="Btn10" Grid.Row="1" Grid.Column="0" Click="Cell_Click"/>
            <Button Name="Btn11" Grid.Row="1" Grid.Column="1" Click="Cell_Click"/>
            <Button Name="Btn12" Grid.Row="1" Grid.Column="2" Click="Cell_Click"/>
            <Button Name="Btn20" Grid.Row="2" Grid.Column="0" Click="Cell_Click"/>
            <Button Name="Btn21" Grid.Row="2" Grid.Column="1" Click="Cell_Click"/>
            <Button Name="Btn22" Grid.Row="2" Grid.Column="2" Click="Cell_Click"/>
        </Grid>
        <Button Content="Сбросить игру" Grid.Row="2" HorizontalAlignment="Center" Click="ResetGame_Click" Margin="10"/>
    </Grid>
</Window>
