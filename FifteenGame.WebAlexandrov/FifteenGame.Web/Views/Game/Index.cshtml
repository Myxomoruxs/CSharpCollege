@model FifteenGame.Web.Models.GameViewModel

@{
    ViewBag.Title = "Игра 15";
    var isGameOver = (bool?)ViewBag.IsGameOver ?? false;
}

<main>
    <h2>Игра 15</h2>

    @if (isGameOver)
    {
        <h2 class="text-danger">Поздравляем! Игра завершена.</h2>

        <div>
            @Html.ActionLink("Повторить", "Index", "Game", new { }, new { @class = "btn btn-success" })
        </div>
    }

    <div class="container text-center">
        @for (int row = 0; row < Model.RowCount; row++)
        {
            <div class="row p-2">
                <div class="col-2">
                </div>

                @for (int column = 0; column < Model.ColumnCount; column++)
                {
                    
                    if (Model.Cells[row, column].IsEmpty)
                    {
                        <div class="col-2">
                        </div>
                        continue;
                    }

                    
                    var isSelected = (Model.SelectedUnitX == row && Model.SelectedUnitY == column);

                   
                    if (isGameOver || Model.Cells[row, column].Direction == FifteenGame.Business.Models.MoveDirection.None)
                    {
                        <div class="col-2 d-grid p-2 text-center @(isSelected ? "selected" : "")">
                            
                            <a href="@Url.Action("PressButton", "Game", new { directionText = Model.Cells[row, column].Type.ToString(), X = row, Y = column })">
                                <span class="unit-name" style="width: 150px; height: 150px; display: block; margin: auto;">
                                    @Model.Cells[row, column].Type.ToString()
                                </span>
                            </a>
                        </div>
                        continue;
                    }

                    <div class="col-2 d-grid p-2 @(isSelected ? "selected" : "")">
                        
                        <a href="@Url.Action("PressButton", "Game", new { directionText = Model.Cells[row, column].Type.ToString(), X = row, Y = column })">
                            <span class="unit-name" style="width: 150px; height: 150px; display: block; margin: auto;">
                                @Model.Cells[row, column].Type.ToString()
                            </span>
                        </a>
                    </div>
                }
            </div>
        }
    </div>

    <style>
        .selected {
            background-color: yellow;
        }
    </style>
</main>
