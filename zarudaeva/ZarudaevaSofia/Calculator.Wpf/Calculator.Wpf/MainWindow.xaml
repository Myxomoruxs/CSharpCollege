<Window x:Class="Calculator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.Wpf" xmlns:viewmodel="clr-namespace:Calculator.Wpf.ViewModel"
        mc:Ignorable="d"
        Title="Калькулятор" Height="450" Width="765" MinHeight="400" MinWidth="400">
    <Window.DataContext>
        <viewmodel:CalculatorViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Background="Black" Margin="5,5,71,5">
            <TextBlock Text="{Binding DisplayOutput}" FontSize="36" Foreground="Pink" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10" />
        </Border>

        <Grid Grid.Row="0" Grid.Column="6" Grid.RowSpan="5" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0" ItemsSource="{Binding OperationLog}" SelectedItem="" Margin="-62,5,10,10" Grid.RowSpan="2" />

            <Button Grid.Row="1" Content="Очистить" Margin="5" Padding="5" HorizontalAlignment="Center" Click="ClearOperationLog_Click" />
        </Grid>

        <Button Grid.Row="1" Grid.Column="0" Content="7" FontSize="36" Margin="5,5,16,5" Click="DigitButton_Click" />

        <Button Grid.Row="1" Content="8" FontSize="36" Margin="104,5,29,5" Click="DigitButton_Click" Grid.ColumnSpan="2" />

        <Button Grid.Row="1" Grid.Column="1" Content="9" FontSize="36" Margin="91,5,41,5" Click="DigitButton_Click" Grid.ColumnSpan="2" />

        <Button Grid.Row="2" Grid.Column="0" Content="4" FontSize="36" Margin="5,5,16,5" Click="DigitButton_Click" />

        <Button Grid.Row="2" Content="5" FontSize="36" Margin="104,5,29,5" Click="DigitButton_Click" Grid.ColumnSpan="2" />

        <Button Grid.Row="2" Grid.Column="1" Content="6" FontSize="36" Margin="91,5,41,5" Click="DigitButton_Click" Grid.ColumnSpan="2" />

        <Button Grid.Row="3" Grid.Column="0" Content="1" FontSize="36" Margin="5,5,16,5" Click="DigitButton_Click" />

        <Button Grid.Row="3" Content="2" FontSize="36" Margin="104,5,29,5" Click="DigitButton_Click" Grid.ColumnSpan="2" />

        <Button Grid.Row="3" Grid.Column="1" Content="3" FontSize="36" Margin="91,5,41,5" Click="DigitButton_Click" Grid.ColumnSpan="2" />

        <Button Grid.Row="4" Grid.Column="0" Content="0" FontSize="36" Margin="5,5,16,5" Click="DigitButton_Click" />

        <Button Grid.Row="4" Content="." FontSize="36" Margin="104,5,29,5" Click="DigitButton_Click" Grid.ColumnSpan="2" />

        <Button Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="4" Content="C" FontSize="36" Margin="94,5,70,5" Click="ClearButton_Click" />

        <Button Grid.Row="2" Grid.Column="2" Content="+" FontSize="36" Margin="93,5,61,5" Click="OperationButton_Click" Grid.ColumnSpan="3" />

        <Button Grid.Row="2" Grid.Column="4" Content="-" FontSize="36" Margin="59,5,71,5" Click="OperationButton_Click" Grid.ColumnSpan="2" />

        <Button Grid.Row="3" Grid.Column="2" Content="*" FontSize="36" Margin="93,5,61,5" Click="OperationButton_Click" Grid.ColumnSpan="3" />

        <Button Grid.Row="3" Grid.Column="4" Content="/" FontSize="36" Margin="59,5,71,5" Click="OperationButton_Click" Grid.ColumnSpan="2" />

        <Button Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="4" Content="=" FontSize="36" Margin="93,5,71,5" Click="OperationButton_Click" />
    </Grid>
</Window>
