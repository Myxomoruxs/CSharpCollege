<Window x:Class="CalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWPF"
        xmlns:viewmodels="clr-namespace:CalculatorWPF.ViewModels"
        mc:Ignorable="d"
        Title="Калькулятор" Height="600" Width="490"
        Background="#1E1E2E"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>

        <DropShadowEffect x:Key="DropShadow" Color="Black" BlurRadius="10" ShadowDepth="2"/>

 
        <Style x:Key="CalcButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#3A3A5A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Effect="{StaticResource DropShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                   Text="{Binding DisplayValue}" 
                   Background="Black" Foreground="White"
                   TextAlignment="Right" FontSize="48" FontWeight="Bold"
                   VerticalAlignment="Center" Padding="15"
                   Margin="5" Height="100"
                   Effect="{StaticResource DropShadow}"/>


        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="0" Content="x²" Click="SquareButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="1" Content="√" Click="SquareRootButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="2" Content="Ln" Click="LogarithmButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="1" Grid.Column="3" Content="C" Click="ClearButton_Click"/>


        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="3" Content="+" Click="OperationButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="3" Content="-" Click="OperationButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="3" Content="*" Click="OperationButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="5" Grid.Column="3" Content="/" Click="OperationButton_Click"/>


        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="0" Content="7" Click="DigitButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="1" Content="8" Click="DigitButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="2" Grid.Column="2" Content="9" Click="DigitButton_Click"/>

        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="0" Content="4" Click="DigitButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="1" Content="5" Click="DigitButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="3" Grid.Column="2" Content="6" Click="DigitButton_Click"/>

        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="0" Content="1" Click="DigitButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="1" Content="2" Click="DigitButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="4" Grid.Column="2" Content="3" Click="DigitButton_Click"/>

        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="5" Grid.Column="0" Content="0" Click="DigitButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="5" Grid.Column="1" Content="," Click="DecimalButton_Click"/>
        <Button Style="{StaticResource CalcButtonStyle}" Grid.Row="5" Grid.Column="2" Content="=" Click="OperationButton_Click"/>
    </Grid>
</Window>
