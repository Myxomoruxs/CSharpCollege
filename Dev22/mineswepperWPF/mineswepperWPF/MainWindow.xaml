<Window x:Class="mineswepperWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mineswepperWPF" xmlns:viewmodels="clr-namespace:mineswepperWPF.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodels:CellWiewModel}"
        mc:Ignorable="d"
        Title="MineSweeper" Height="466.558" Width="569.572">
    <Window.DataContext>
        <viewmodels:ViewMineService />
    </Window.DataContext>
    <Grid Margin="0,0,34,0">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ItemsControl ItemsSource="{Binding Cells}" HorizontalAlignment="Left" Width="389" Grid.ColumnSpan="3" Margin="65,47,0,27" Grid.RowSpan="3">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="{Binding Row}" Columns="{Binding Column}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid  MouseLeftButtonDown="Cell_MouseDown" MouseRightButtonDown="CellFlag">
                        <Rectangle Margin="2"    >
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="{Binding ImagePath}" />
                            </Rectangle.Fill>

                        </Rectangle>

                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Grid.Row" Value="{Binding Row}" />
                    <Setter Property="Grid.Column" Value="{Binding Column}" />
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>
        <Grid Margin="23,10,153,176">
            <Label Content="{Binding CountFlags}"  />
        </Grid>
        
    </Grid>
</Window>
