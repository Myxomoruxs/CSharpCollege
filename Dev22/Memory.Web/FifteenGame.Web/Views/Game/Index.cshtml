@model FifteenGame.Web.Models.GameViewModel

@{
    ViewBag.Title = "Найди одинаковые руду ";
    bool isGameOver = (bool?)ViewBag.IsGameOver ?? false;
}

<main>
    <h2>Найди одинаковые Руду </h2>

    @if (isGameOver)
    {
        <h2 class="text-danger">Поздравляем! Игра завершена.</h2>
        <div>@Html.ActionLink("Начать заново", "Index", "Game", new { }, new { @class = "btn btn-primary fs-3", })</div>
    }

    <div class="container text-center">
        @for (int row = 0; row < Model.RowCount; row++)
        {
            <div class="row d-flex justify-content-center align-items-center">
                @for (int column = 0; column < Model.ColumnCount; column++)
                {
                    <div class="col col-2 d-grid gap-2 p-2">
                        @if (Model.Cells[row, column].NameOre == string.Empty)
                        {
                            <button class="btn btn-secondary fs-3" disabled></button>
                        }
                        else if (isGameOver)
                        {
                            <button class="btn btn-secondary fs-3" disabled>@Model.Cells[row, column].TextButoon</button>
                        }
                        else if (Model.Cells[row, column].IsMine)
                        {
                            <button class="btn btn-success fs-3" disabled>@Model.Cells[row, column].TextButoon</button>
                        }
                        else
                        {
                            @Html.ActionLink(
                                Model.Cells[row, column].TextButoon,
                                "PressButton",
                                new { colum = Model.Cells[row, column].Column, row = Model.Cells[row, column].Row },
                                new { @class = "btn btn-danger fs-3" }
                            )
                        }
                    </div>
                }
            </div>
        }
    </div>
</main>


